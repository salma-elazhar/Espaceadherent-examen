    <table class="table" id="datatablesSimple">
        <thead>
            <tr>
                
                <th>Titre</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Statut</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                
                <td>{{ ticket.titre }}</td>
                <td>{{ ticket.nom }}</td>
                <td>{{ ticket.description }}</td>
                <td>{{ ticket.statut }}</td>
                <td>{{ ticket.date ? ticket.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}"><button>show</button></a>
                    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}"><button>edit</button></a>
                    <a href="{{ path('ticket_delete', {'id': ticket.id}) }}"><button>delete</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Il n y a pas des demandes a afficher</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ticket_new') }}"> <button class="btn btn-primary">Cre√©r une nouvelle demande</button></a>
