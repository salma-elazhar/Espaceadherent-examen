{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ ticket.titre }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ticket.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ ticket.statut }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ticket.date ? ticket.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ticket_index') }}"> <button class="btn btn-primary">retour</button></a>

    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}"> <button class="btn btn-primary">Modifier</button></a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
